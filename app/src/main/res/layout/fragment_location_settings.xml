<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/violet">

    <!-- Header -->
    <TextView
        android:id="@+id/headerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Settings"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Main Content Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/headerTitle"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <!-- Location Icon -->
            <ImageView
                android:id="@+id/locationIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_location_vector"
                app:tint="@color/violet"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Status Text -->
            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location Sharing: OFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/locationIcon" />

            <!-- Classes Toggle Section -->
            <TextView
                android:id="@+id/classesToggleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share with Classes"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/violet"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/statusText" />

            <Switch
                android:id="@+id/classesToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:scaleX="1.3"
                android:scaleY="1.3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/classesToggleLabel" />

            <TextView
                android:id="@+id/classesToggleDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Share your general location with professors"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/classesToggle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/classesToggle"
                app:layout_constraintBottom_toBottomOf="@id/classesToggle" />

            <!-- Guardian Toggle Section -->
            <TextView
                android:id="@+id/guardianToggleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share with Guardian"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/violet"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/classesToggle" />

            <Switch
                android:id="@+id/guardianToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:scaleX="1.3"
                android:scaleY="1.3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guardianToggleLabel" />

            <TextView
                android:id="@+id/guardianToggleDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Share your general location with your guardian"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/guardianToggle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/guardianToggle"
                app:layout_constraintBottom_toBottomOf="@id/guardianToggle" />

            <!-- Single Toggle for Professors (will be hidden for students) -->
            <Switch
                android:id="@+id/locationToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/statusText" />

            <!-- Description Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/descriptionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#F5F5F5"
                app:cardElevation="2dp"
                app:layout_constraintTop_toBottomOf="@id/guardianToggle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="How it works:"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/violet" />

                    <TextView
                        android:id="@+id/descriptionText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Enable to share your general location (like 'Campus Area' or 'Downtown') with your classes"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:textColor="@android:color/black" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Privacy Notice -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_background"
                android:backgroundTint="#E8F5E8"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/descriptionCard">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_security"
                    app:tint="#4CAF50"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Privacy Protected: Only general area names are shared, never your exact location"
                    android:textSize="12sp"
                    android:textColor="#2E7D32" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
