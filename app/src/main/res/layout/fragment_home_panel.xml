<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/violet"
    tools:context=".fragments.HomePanelFragment">

    <!-- Header Section -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        app:tint="@android:color/white"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Back"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/loginGreeting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hello, "
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/notificationContainer"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/notificationContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/loginGreeting"
        app:layout_constraintBottom_toBottomOf="@id/loginGreeting">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp">

            <ImageButton
                android:id="@+id/subjectNotification"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_notification"
                app:tint="@android:color/white" />

            <TextView
                android:id="@+id/notificationBadge"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="top|end"
                android:background="@drawable/notification_badge"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone"
                android:text="0" />
        </FrameLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/default_profile"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/white"/>
    </LinearLayout>

    <!-- Main Content -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/loginGreeting"
        app:layout_constraintBottom_toBottomOf="parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvTodaySchedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today's Schedule"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/violet"
                    android:layout_marginBottom="16dp"/>

                <ProgressBar
                    android:id="@+id/loadingIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/subjectCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false" />

                <!-- Empty State for Schedule -->
                <LinearLayout
                    android:id="@+id/scheduleEmptyState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="32dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ic_calendar"
                        android:alpha="0.6"
                        app:tint="@color/violet"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="No classes scheduled for today"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/violet"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Check back later for updates"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:gravity="center"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvNoSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No classes scheduled for today"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:textColor="@color/violet"
                    android:visibility="gone"/>

                <!-- Attendance Log Section -->
                <LinearLayout
                    android:id="@+id/attendanceLog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:id="@+id/tvAttendanceTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recent Attendance"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/violet"
                        android:layout_marginBottom="16dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvAttendanceLogs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:background="@android:color/transparent"/>

                    <!-- Empty State for Attendance -->
                    <LinearLayout
                        android:id="@+id/attendanceEmptyState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginTop="32dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/ic_notify"
                            android:alpha="0.6"
                            app:tint="@color/violet"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="No recent attendance logs"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/violet"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Your attendance history will appear here"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:gravity="center"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvNoLogs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No recent attendance logs"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:textColor="@color/violet"
                        android:visibility="gone"/>
                </LinearLayout>

                <!-- Student Status Section -->
                <LinearLayout
                    android:id="@+id/studentStatusContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/tvLinkedStudentsTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Linked Students"
                            android:textColor="@color/violet"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Live Status"
                            android:textColor="@color/violet"
                            android:textSize="14sp"
                            android:alpha="0.7"
                            android:layout_marginStart="8dp"/>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvLinkedStudents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:paddingHorizontal="8dp"
                        android:paddingBottom="8dp" />

                    <!-- Empty State for Linked Students -->
                    <LinearLayout
                        android:id="@+id/linkedStudentsEmptyState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="32dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:src="@drawable/ic_profile_placeholder"
                            android:alpha="0.6"
                            app:tint="@color/violet"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:text="No linked students found"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/violet"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginHorizontal="32dp"
                            android:text="Contact your school administrator to link your children's accounts"
                            android:textSize="16sp"
                            android:textColor="#757575"
                            android:gravity="center"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
