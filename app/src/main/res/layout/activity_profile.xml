<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:background="@color/violet"
    android:padding="24dp">

    <!-- Profile Image (Moved Outside CardView) -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="178dp"
        android:layout_height="167dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/circle_background"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Profile Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:padding="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/profileImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="365dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- User Name -->
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="John Doe"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- User Email -->
            <TextView
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="03-2442-552421"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />

            <!-- Campus -->
            <TextView
                android:id="@+id/userCampus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Campus: Dagupan Campus"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <!-- College -->
            <TextView
                android:id="@+id/userCollege"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="College: CITE"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <!-- Course -->
            <TextView
                android:id="@+id/userCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Course: Bachelor of Science in Information Technology"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <!-- Learning Modality -->
            <TextView
                android:id="@+id/userLearningModality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Learning Modality: FLEX"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <!-- Curriculum -->
            <TextView
                android:id="@+id/userCurriculum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Curriculum: CITE - Computer Security 24-25"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <!-- Semester -->
            <TextView
                android:id="@+id/userSemester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Semester: 2nd Semester"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <!-- Logout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_logout"
                android:layout_width="249dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/violet"
                android:text="Logout"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
