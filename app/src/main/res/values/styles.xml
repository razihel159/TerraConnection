<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ... existing styles ... -->

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CalendarViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/violet</item>
        <item name="colorPrimary">@color/violet</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:headerBackground">@android:color/white</item>
        <item name="android:weekDayTextAppearance">@style/CalendarWeekDayCustom</item>
        <item name="android:dateTextAppearance">@style/CalendarDateCustom</item>
    </style>

    <style name="CalendarWeekDayCustom" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/violet</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CalendarDateCustom" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CodeInputBox">
        <item name="android:background">@drawable/code_input_background</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="CaptchaInputBox" parent="CodeInputBox">
        <item name="android:inputType">textVisiblePassword</item>
        <item name="android:digits">ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789</item>
    </style>

    <style name="OtpInputBox" parent="CodeInputBox">
        <item name="android:inputType">number</item>
    </style>
</resources> 