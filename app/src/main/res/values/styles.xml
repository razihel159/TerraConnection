<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ... existing styles ... -->

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CalendarViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/violet</item>
        <item name="colorPrimary">@color/violet</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:headerBackground">@android:color/white</item>
        <item name="android:weekDayTextAppearance">@style/CalendarWeekDayCustom</item>
        <item name="android:dateTextAppearance">@style/CalendarDateCustom</item>
    </style>

    <style name="CalendarWeekDayCustom" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/violet</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CalendarDateCustom" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources> 